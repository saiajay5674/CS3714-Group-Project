<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_margin="5dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="35dp">
        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/userNameTxt" android:layout_weight="1"
                android:textSize="18dp"/>
        <View
                android:id="@+id/divider8"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/listDivider"
                android:layout_weight="0.02" android:scrollbarSize="1dp"/>
        <ImageView
                android:layout_width="16dp"
                android:layout_height="24dp" app:srcCompat="@mipmap/ic_phone" android:id="@+id/imageView2"
                android:layout_weight="0.1"/>
    </LinearLayout>
    <View
            android:id="@+id/divider6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_weight="1"/>
</androidx.cardview.widget.CardView>