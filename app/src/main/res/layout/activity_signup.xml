<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignupActivity"
        android:background="@drawable/blue_blurred_back">

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_email" android:hint="Email Address"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/signup_username" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/signup_password" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:hint="Password"
            app:layout_constraintTop_toBottomOf="@+id/signup_email" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/signup_phone" android:inputType="phone"
            android:hint="Phone Number"
            app:layout_constraintTop_toBottomOf="@+id/signup_password" android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"/>
    <Button
            android:text="Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/signup_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_phone" app:layout_constraintVertical_bias="0.0"
            android:layout_marginTop="32dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/signup_username"
            android:hint="Username" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.274"
            android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"/>
    <TextView
            android:text="Already have an account?  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_button"
            app:layout_constraintVertical_bias="0.103" android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.4"
            android:textColor="#FFF"/>
    <TextView
            android:text="Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_text" app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/signup_button" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.103" android:textSize="18sp"
            android:textColor="#FFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>