<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:background="@drawable/blue_blurred_back"
                                                   android:layout_height="match_parent"
                                                   tools:context=".EventsListFragment">

    <androidx.appcompat.widget.AppCompatImageButton
            android:text="Filter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/filterBtn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentRight="true"
            android:backgroundTint="#fff"
            android:theme="@style/Button.White"
            android:textColor="#1087F0"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/filter" android:scaleType="fitCenter"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/events_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/filterBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>