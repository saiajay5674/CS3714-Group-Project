<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent" android:id="@+id/linearLayout2"
                                                   android:orientation="vertical">
    <Spinner
            android:id="@+id/add_event_sport"
            android:layout_height="43dp"
            android:layout_width="match_parent"
            android:entries="@array/games"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/add_event_players_number"
    />

    <EditText
            android:layout_height="47dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/add_event_time"
            android:layout_width="match_parent"
            android:hint="Choose time" tools:layout_editor_absoluteX="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/add_event_location"/>

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/add_event_players_number" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_event_sport"
            app:layout_constraintBottom_toTopOf="@+id/add_event_location" android:hint="Enter number of players"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/add_event_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_event_players_number"
            app:layout_constraintBottom_toTopOf="@+id/add_event_time" android:hint="Enter location"/>
</androidx.constraintlayout.widget.ConstraintLayout>